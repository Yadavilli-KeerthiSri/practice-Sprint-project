package com.cg.DTO;

import com.cg.model.Customer;
import com.cg.model.Payment;

public final class Mapper {
    private Mapper() {}

    public static CustomerDTO toCustomerDTO(Customer c) {
        return CustomerDTO.builder()
                .customerId(c.getCustomerId())
                .customerName(c.getCustomerName())
                .contacts(c.getContacts())
                .email(c.getEmail())
                .address(c.getAddress())
                .build();
    }

    public static void updateCustomerFromDTO(CustomerDTO dto, Customer c) {
        c.setCustomerName(dto.getCustomerName());
        c.setContacts(dto.getContacts());
        c.setEmail(dto.getEmail());
        c.setAddress(dto.getAddress());
    }

    public static PaymentDTO toPaymentDTO(Payment p) {
        return PaymentDTO.builder()
                .paymentId(p.getPaymentId())
                .paymentName(p.getPaymentName())
                .amount(p.getAmount())
                .transactionStatus(p.getTransactionStatus())
                .customerId(p.getCustomer().getCustomerId())
                .build();
    }
}