package com.cg.iservice;

import java.util.List;

import com.cg.entity.MenuItem;
import com.cg.exception.ResourceNotFoundException;

public interface IMenuItemService {
	MenuItem createMenuItem(MenuItem item);
	 
    MenuItem updateMenuItem(Integer id, MenuItem item) throws ResourceNotFoundException;
 
    MenuItem getMenuItemById(Integer id) throws ResourceNotFoundException;
 
    List<MenuItem> getAllMenuItems();
 
    List<MenuItem> getMenuItemsByRestaurant(Integer restaurantId) throws ResourceNotFoundException;
 
    void deleteMenuItem(Integer id) throws ResourceNotFoundException;
}
