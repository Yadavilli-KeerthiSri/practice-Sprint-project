package com.cg.iservice;

import java.util.List;

import com.cg.entity.Order;
import com.cg.entity.OrderStatus;
import com.cg.exception.ResourceNotFoundException;

public interface IOrderService {
	List<Order> getOrdersByUsername(String username);
	 Order placeOrder(Order order);
	 
	 Order updateOrderStatus(Integer orderId, OrderStatus status) throws ResourceNotFoundException;
	 
	 Order getOrderById(Integer orderId) throws ResourceNotFoundException;
	 
	 List<Order> getAllOrders();
	 
	 List<Order> getOrdersByCustomer(Integer customerId) throws ResourceNotFoundException;
	 
	 void cancelOrder(Integer orderId) throws ResourceNotFoundException;
}
