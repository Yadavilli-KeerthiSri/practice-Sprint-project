package com.cg.iservice;

import com.cg.dto.CustomerDTO;
import com.cg.exception.ResourceNotFound;

import java.util.List;

public interface ICustomerService {
    CustomerDTO create(CustomerDTO dto) throws Exception;
    CustomerDTO getById(Long id) throws ResourceNotFound;
    List<CustomerDTO> getAll();
    CustomerDTO update(Long id, CustomerDTO dto) throws ResourceNotFound;
    void delete(Long id) throws ResourceNotFound;
}

