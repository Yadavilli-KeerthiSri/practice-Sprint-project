                    <tr th:each="order : ${orders}">
                        <td th:text="${order.orderId}" class="fw-bold"></td>
                        <td th:text="${#temporals.format(order.orderDate, 'dd/MM/yy HH:mm')}"></td>
                        <td th:text="${order.customer != null ? order.customer.customerName : 'N/A'}"></td>
                        <td th:text="${order.restaurant != null ? order.restaurant.restaurantName : 'N/A'}"></td>
                        
                        <!-- Added Payment ID from OneToOne relationship -->
                        <td>
                            <span th:if="${order.payment != null}" th:text="${order.payment.paymentId}" class="text-muted small"></span>
                            <span th:unless="${order.payment != null}" class="badge bg-secondary"></span>
                        </td>

                        <!-- Added Agent ID from ManyToOne relationship -->
                        <td>
                            <span th:if="${order.agent != null}" th:text="${order.agent.agentId}"></span>
                            <span th:unless="${order.agent != null}" class="text-danger small italic"></span>
                        </td>

                        <td>
                            <span class="badge badge-status" 
                                  th:classappend="${order.orderStatus.toString() == 'PLACED' ? 'bg-info' : 'bg-success'}" 
                                  th:text="${order.orderStatus}">STATUS</span>
                        </td>
                        
                        <td th:text="${#numbers.formatCurrency(order.totalAmount)}">â‚¹0.00</td>
                        
                        <td class="text-center">
                            <div class="btn-group">
                                <a th:href="@{/orders/update/{id}(id=${order.orderId})}" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a th:href="@{/orders/delete/{id}(id=${order.orderId})}" 
                                   class="btn btn-sm btn-outline-danger" 
                                   onclick="return confirm('Delete this order?')";>Delete</a>
                            </div>
                        </td>
                    </tr>
                    <tr th:if="${#lists.isEmpty(orders)}">
                        <td colspan="9" class="text-center py-5 text-muted">No orders found in the database.</td>
                    </tr>
                </tbody>
            </table>
