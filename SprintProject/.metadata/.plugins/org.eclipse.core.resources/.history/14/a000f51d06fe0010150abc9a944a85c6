public interface IRestaurantService {
	 Restaurant createRestaurant(Restaurant restaurant);
	 
	 Restaurant updateRestaurant(Integer id, Restaurant restaurant) throws ResourceNotFound;
	 
     Restaurant getRestaurantById(Integer id) throws ResourceNotFound;
	 
